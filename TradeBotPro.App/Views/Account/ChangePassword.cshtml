@using TradeBotPro.App.Models.DataModels;
@model TradeBotPro.App.Models.FormModels.ChangePasswordFormModel
@{
    ViewData["Title"] = "Change Password Page";
}

<div class="row">
    <div class="box-shadow col-lg-6 col-md-8 col-sm-12 border border-1 py-4 rounded position-absolute top-50 start-50 translate-middle">
        <h4 class="mb-4">Change Password</h4>
        <form asp-action="ChangePassword" method="post">
            <div class="form-group mb-3">
                <label asp-for="Password">Password <span class="text-danger">*</span></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ConfirmPassword">Confirm Password <span class="text-danger">*</span></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Change</button>
        </form>
    </div>
</div>